extends -templates/index--tpl


block content
	.h1 Настройки интересов
	// Form
	.sets
		// Form menu section
		ul(role="tablist").sets-tabs
			li(role="presentation").sets-tabs__item
				a(href="#" role="tab" aria-selected="false").sets-tabs__item-name Подборка Васи
			li(role="presentation").sets-tabs__item.sets-tabs__item--active
				a(href="#" role="tab" aria-selected="true" aria-controls="panel2").sets-tabs__item-name Подборка 123
			li(role="presentation").sets-tabs__item
				a(href="#" role="tab" aria-selected="false").sets-tabs__item-name Турция 20.03
			li(role="presentation").sets-tabs__item
				a(href="#" role="tab" aria-selected="false").sets-tabs__item-name Подборка #1
			button.sets__add-btn Добавить подборку
		.sets-tabs-content(role="tabpanel" id="panel2" aria-labelledby="Подборка 123")
			// Collection and city section
			.common
				.collection-name
					label.field-label(for="collectionName") Название подборки
					input.field-input(id="collectionName" type="text" value="Подборка 123")
				.city-name.select-wrp
					label.field-label(for="city") Ваш город
					input.field-input.select-input(id="city" type="text" placeholder="Например, Москва")
					ul.select-block(aria-hidden="true")
						each val in ['Москва', 'Санкт-Петербург', 'Новосибирск', 'Екатеринбург', 'Нижний Новгород', 'Казань', 'Челябинск']
							li.select-block__item= val
			// Region section
			.regions
				.regions__header.field-label Страны
				.regions__desc.field-label.field-label__desc Вы можете задать несколько стран или регионов для одной подборки
				.regions__list
					.region
						.region__name Юго-Восточная Азия
						.region-container
							ul.region__countries
								li.region__one-country.region__one-country--1 Таиланд
									button.region__remove-btn
								li.region__one-country.region__one-country--2 Вьетнам
									button.region__remove-btn
								li.region__one-country.region__one-country--3 Индонезия
									button.region__remove-btn
							button.regions__add-btn.regions__add-btn--region Добавить регион
							button.regions__add-btn.regions__add-btn--country Добавить страну
			// Information section
			.props
				.props__item.props__item--flight
					label.field-label(for="flight") Дата вылета
					input.field-input.datepicker-here(id="flight" type="text" data-range="true" data-multiple-dates-separator="–")
				.props__item.props__item--days
					label.field-label(for="days") На сколько
					input.field-input(id="days" type="text" value="7–14 ночей")
				.props__item.props__item--guests.select-wrp
					label.field-label(for="guests") Количество гостей
					input.field-input.select-input(id="guests" type="text" value="2 взрослых, 2 детей")
					ul.select-block(aria-hidden="true")
						each val in ['1 взрослый', '2 взрослых', '3 взрослых', '1 взрослый, 1 ребёнок', '2 взрослых, 2 детей', '3 взрослых, 3 детей']
							li.select-block__item= val
				.props__item.props__item--price.select-wrp
					label.field-label(for="price") Стоимость тура
					input.field-input.select-input(id="price" type="text" value="50 000 ₽ – 150 000 ₽")
					ul.select-block(aria-hidden="true")
						li.select-block__item Любая
						li.select-block__item 50 000
							span.select-block__item__curr  ₽
							|  – 150 000
							span.select-block__item__curr  ₽
						li.select-block__item 150 000
							span.select-block__item__curr  ₽
							|  – 200 000
							span.select-block__item__curr  ₽
						li.select-block__item 200 000
							span.select-block__item__curr  ₽
							|  – 250 000
							span.select-block__item__curr  ₽
						li.select-block__item 250 000
							span.select-block__item__curr  ₽
							|  – 500 000
							span.select-block__item__curr  ₽
			.props
				.stars.props__item
					.stars__desc.field-label Категория отелей от
					form.field-input.stars__control(aria-label="Категория отелей")
						input(value="1" id="star1" type="radio" name="rating" class="stars__control--hidden")
						label(for="star1" class="star")
							span.stars__control--hidden 1 звезда
						input(value="2" id="star2" type="radio" name="rating" class="stars__control--hidden")
						label(for="star2" class="star")
							span.stars__control--hidden 2 звезды
						input(value="3" id="star3" type="radio" name="rating" class="stars__control--hidden")
						label(for="star3" class="star")
							span.stars__control--hidden 3 звезды
						input(value="4" id="star4" type="radio" name="rating" class="stars__control--hidden")
						label(for="star4" class="star")
							span.stars__control--hidden 4 звезды
						input(value="5" id="star5" type="radio" name="rating" class="stars__control--hidden")
						label(for="star5" class="star")
							span.stars__control--hidden 5 звёзд
				.props__item.props__item--rating
					.field-label Рейтинг TopHotels
					.props__rating-dropdown.field-input(role="input" aria-label="Рейтинг TopHotels")
						.props__rating-label Не ниже
						.props__rating-icon
						.props__rating-val 4.0
				.props__item.props__item--food.select-wrp
					label.field-label(for="food") Тип питания
					input.field-input.select-input(id="food" type="text" value="Любой")
					ul.select-block(aria-hidden="true")
						each val in ['Любой', 'Только завтраки', 'Завтрак, обед и ужин', 'Всё включено', 'Ультра всё включено']
							li.select-block__item= val
				.props__item.props__item--location.select-wrp
					label.field-label(for="location") Расположение
					input.field-input.select-input(id="location" type="text" value="Пляжное, 1-я линия")
					ul.select-block(aria-hidden="true")
						each val in ['Пляжное, 1-я линия', 'Пляжное, 2-я линия', 'Центр города', 'Любое']
							li.select-block__item= val
		.sets-footer
			button.sets-footer__submit-btn Смотреть результаты
			button.sets-footer__remove-btn Удалить подборку
