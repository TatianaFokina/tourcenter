.header
	& ul
		margin 0
		padding 0
		height 100%
		display flex
		align-items stretch
		color $brand-white
		list-style none

.nav-item
	padding 0 21px
	display flex
	align-items center
	font-weight 100
	opacity 0.5
	transition .2s ease
	&__active
		opacity 1
	& a
		color $brand-white
		text-decoration none
	&:hover
		color $brand-white
		opacity 1
