html
	font-size $font-size-root




// ===================================================================================================================
// Headings
// ===================================================================================================================

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
	font-family $headings-font-family
	font-weight bold
	line-height $headings-line-height
	color $headings-color

h1, .h1
	margin-bottom 1rem
	font-size $font-size-h1
	font-weight bold

h2, .h2
	margin-bottom 0.5rem
	line-height 1
	font-size $font-size-h2
	color $brand-light-black

h3, .h3
	font-size $font-size-h3

h4, .h4
	margin-bottom 0.5rem
	font-size $font-size-h4

h5, .h5
	font-size $font-size-h5
	font-weight bold
	margin 0

h6, .h6
	font-size $font-size-h6
	font-weight bold
	margin 0

	
	
	
p
	margin-top 0
	margin-bottom 1rem


hr
	margin-top 1.2rem
	margin-bottom 1.2rem
	border 0
	border-top 1px solid rgba($brand-black, 0.1)



ol,
ul,
dl
	margin-top 0
	margin-bottom 1rem
	padding-left 20px

ol ol,
ul ul,
ol ul,
ul ol
	margin-bottom 0
