.content
	@extend .container-fluid
	
// Common styles
.sets
	background $brand-white
	&-footer
		padding 1.5rem 0 // 24px
		display flex
		justify-content center
		border-top 3px solid $brand-gray-border

// Common styles for label and input
.field-label
	margin-bottom 0.5rem
	color $brand-gray-text
	font-size $font-size-xs
	font-weight normal
	&__desc
		font-style italic

.field-input
	height 34px
	border solid 1px $brand-gray-border
	
::placeholder
	color d6d6d6

// Collections menu
.sets-tabs
	$active-tab-border = $brand-1
	
	margin 0
	padding 0
	display flex
	flex-wrap wrap
	list-style none
	border-bottom 3px solid $brand-gray-border
	&__item
		position relative // for hover effect
		padding 0 1rem 0 1rem // 16px
		&-name
			padding 1.333rem 0 1.067rem 0
			display block
			color $brand-gray-light
			text-decoration none
			text-transform uppercase
			
		// Common styles for tabs border
		&:after
		&--active:after
			position absolute
			content ''
			top 100%
			left 0
			width 100%
			height 0
			opacity 0
			transition height 0.2s, opacity 0.2s
		&:hover:after
		&:focus:after
		&--active:after
			height 3px
			opacity 1
			
		// Border colors
		&:after
			background lighten(desaturate($active-tab-border, 40%), 60%)
		&--active:after
			background $active-tab-border
	
// Menu button
.sets__add-btn
	margin-left auto
	padding 0 1rem 0 1.7rem
	color $brand-1
	font-size $font-size-xs
	text-transform uppercase
	background url("../imgs/icons/ico-add.svg") 0 50% no-repeat
	background-size 20px
	border 0

.sets-tabs-content
	padding 2.5rem 1.333rem 1.333rem 1.5rem // 40px 35px ... 24px

// Margin-top for section
.common
.regions
	margin-bottom 2.5rem // 40px
.props
	margin-bottom 2.813rem // 45px

// Collection & city
.common
	display flex
	align-items flex-end
	flex-wrap wrap

.collection-name
	margin-right 1rem
	
.city-name
	margin-top 0

// Region section

.region
	padding 1rem 0 1.125rem 1rem // 18px 16px
	border 1px solid $brand-gray-border
	&-container
		display flex
		flex-wrap wrap
	&__name
		margin-bottom 1.188rem // 19px
	&__countries
		margin 0
		padding 0
		display flex
		flex-wrap wrap
		list-style none
	&__one-country
		margin-right 1rem // 16px
		margin-top 0
		padding 0 1rem 0 2.5rem // 16px from right, 40px from left
		display flex
		align-items center
		line-height 2rem
		background-color $brand-gray-pale
		background-position 1rem 50%
		background-size 16px 11px
		background-repeat no-repeat
		border-radius 20px
		&--1
			background-image url("../imgs/icons/ico-thailand.svg")
		&--2
			background-image url("../imgs/icons/ico-vietnam.svg")
		&--3
			background-image url("../imgs/icons/ico-indonesia.svg")
	
	// Remove button for region
	&__remove-btn
		margin-left 0.875rem // 14px
		height 14px
		width @height
		background-image url("../imgs/icons/ico-del--1.svg")
		background-size contain
		background-color transparent
		background-repeat no-repeat
		border 0

.regions__add-btn
	padding 0 1rem // 16px
	background $brand-white
	color $brand-1
	font-size $font-size-xs
	text-transform uppercase
	line-height 2rem // 32px
	border 1px solid $brand-1
	border-radius 20px
	&--region
		margin-right 1rem // 16px

// Information section

.props
	display flex
	flex-wrap wrap
	&__item
		border-left 0

// Ratio

.stars__control
	padding 0 0.5rem
	display flex
	align-items center
	justify-content center
	flex-direction row-reverse
	& label
		display block
		cursor pointer
	&--hidden
		display none

.star
	width 24px
	height 18px
	background-image svg-load("../imgs/icons/ico-star--not-selected.svg")
	background-repeat no-repeat
	background-position 50% 50%
	&:hover
	&:hover ~ label
	/[type="radio"]:checked ~ label
		background-image svg-load("../imgs/icons/ico-star--selected.svg")
	
// TopHotels

.props__item--rating
	& .field-input
		padding 0 0.5rem // 8px

.props__rating
	&-dropdown
		display flex
		align-items center
	&-icon
		margin-right 0.25rem // 4px
		width 15px
		height 11px
		background-image url("../imgs/icons/ico-crown.svg")
		background-position 50% 50%
		background-repeat no-repeat
	&-label
		padding-right 0.5rem // 8px
	&-val
		color $brand-4

// Selector block
.select-wrp
	position relative

.select-block // ul
	margin-bottom 0
	padding 0
	width 100%
	display none
	position absolute
	background $brand-white
	list-style none
	border 1px solid $brand-gray-border
	box-shadow 0 2px 8px rgba(0, 0, 0, 0.2)
	z-index 999
	&__item
		padding 0.5rem // 8px
		font-size $font-size-md
		cursor default
		&:hover
			background $brand-gray-pale
		&__curr
			color $brand-gray-text




// Buttons

.sets-footer__submit-btn
.sets-footer__remove-btn
	height 40px

.sets-footer__submit-btn
	margin-right 1rem // 16px
	padding 0 40px 0 1.5rem // 24px
	background-color $brand-2
	background-image url("../imgs/icons/ico-arrow.svg")
	background-size 16px
	background-position 94% 50%
	background-repeat no-repeat
	color $brand-white
	font-size $font-size-md
	text-transform uppercase
	border 0
	border-radius 2px
	
.sets-footer__remove-btn
	padding 0 1rem // 16px
	background $brand-white
	border 1px solid $brand-2
	border-radius 5px
	font-size 10px
	color $brand-2
	text-transform uppercase
